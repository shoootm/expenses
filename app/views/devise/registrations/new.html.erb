<h2>新規作成</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（再確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :住所（都道府県） %><br />
    <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture" %>
  </div>

  <div class="field">
    <%= f.label :住所（市町村区） %><br />
    <%= f.text_field :municipalitie, autofocus: true, autocomplete: "municipalitie" %>
  </div>


  <div class="actions">
    <%= f.submit "作成" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
